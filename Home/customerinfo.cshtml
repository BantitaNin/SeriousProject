@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anuphan:wght@200;500&display=swap" rel="stylesheet">
    <!-- Google material -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" />
    <title></title>
    <style>
        h1 {
            text-align: center;
            margin-bottom: 1vh;
        }

        .foodList {
            width: 80vw;
            height: 50vh;
            margin-left: 10vw;
            margin-top: 20px;
            background-color: #f3f3f3;
            overflow: auto;
        }

            .foodList::-webkit-scrollbar {
                width: 10px;
            }

            .foodList::-webkit-scrollbar-track {
                background-color: transparent;
            }

            .foodList::-webkit-scrollbar-thumb {
                background: #ffdbae;
                border-radius: 10px;
            }

                .foodList::-webkit-scrollbar-thumb:hover {
                    background: #ffbd6c;
                }

        .foodCard {
            width: 100%;
            height: 200px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        img {
            height: 85%;
            border-radius: 10px;
            left: 20px;
        }

        .foodName {
            font-size: 8vh;
            right: 13vw;
        }

        .cost {
            font-size: 8vh;
            right: 30px;
            left: 10vw;
        }

        .removeOrder {
            margin: 0px;
            padding: 1.1vh 1.5vh;
            right: 50px;
            font-size: 2.5vh;
            background-color: indianred;
            border-radius: 5px;
            border: none;
        }

            .removeOrder:hover {
                background-color: crimson;
                cursor: pointer;
            }

            .removeOrder:active {
                background-color: indianred;
            }

        .line {
            width: 70%;
            height: 2px;
            background-color: lightgray;
            margin: 5px auto 5px auto;
        }

        .detailSubmitRow {
            display: flex;
            justify-content: space-between;
            width: 80vw;
            height: 30vh;
            margin-left: 10vw;
            margin-top: 20px;
        }

        .row {
            display: flex;
            justify-content: space-between;
        }

        .deHead {
            font-size: 50px;
        }

        .formHeader {
            font-size: 30px;
            padding: 15px 0px 15px 0px;
        }

        .input {
            font-size: 25px;
            width: 200px;
            height: 30px;
            margin-top: 20px;
            margin-left: 10px;
        }

        .submit {
            width: 300px;
            height: 100px;
            margin: auto;
            margin-top: 15vh;
            margin-left: 40vw;
            padding-right: 10px;
            font-size: 50px;
            background-color: lightgreen;
            border: 2px solid darkslategray;
            border-radius: 10px;
            color: darkslategray;
        }

            .submit:hover {
                background-color: limegreen;
                cursor: pointer;
            }

            .submit:active {
                background-color: lightgreen;
            }

        .send {
            font-size: 50px !important;
        }
    </style>
</head>
<body>
    <div class="main">
        <h1 class="header">สรุปรายการ</h1>

        <!-- สี่เหลี่ยมใหญ่ๆ กลางจอ -->
        <div class="foodList">

            <div class="foodCard">
                <img src="https://cdn.britannica.com/98/235798-050-3C3BA15D/Hamburger-and-french-fries-paper-box.jpg" alt="">
                <p class="foodName">เมนู A</p>
                <p class="cost">฿45</p>
                <button class="removeOrder">X</button>
            </div>

            <div class="line"></div>

            <div class="foodCard">
                <img src="https://cdn.britannica.com/98/235798-050-3C3BA15D/Hamburger-and-french-fries-paper-box.jpg" alt="">
                <p class="foodName">เมนู A</p>
                <p class="cost">฿45</p>
                <button class="removeOrder">X</button>
            </div>

            <div class="line"></div>

            <div class="foodCard">
                <img src="https://cdn.britannica.com/98/235798-050-3C3BA15D/Hamburger-and-french-fries-paper-box.jpg" alt="">
                <p class="foodName">เมนู A</p>
                <p class="cost">฿45</p>
                <button class="removeOrder">X</button>
            </div>


        </div>

        <!-- กรอกข้อมูลผู้ฝาก -->
        <div class="detailSubmitRow">
            <div class="detail">
                <p class="deHead">ข้อมูลผู้สั่ง</p>

                <div class="row-no-gutters">
                    <p class="formHeader">ชื่อ :</p>
                    <p class="input">nin</p>
                </div>

                <div class="row-no-gutters">
                    <p class="formHeader">เบอร์โทร :</p>
                    <p class="input">0xxxxxxxx</p>
                </div>

                <div class="row-no-gutters">
                    <p class="formHeader">จุดรับอาหาร :</p>
                    <p class="input">โรง A</p>
                </div>
            </div>

            <button class="row-no-gutters">
                <span class="material-symbols-rounded send">
                    Done
                </span> 
            </button>
        </div>

    </div>
    
</body>
</html>
